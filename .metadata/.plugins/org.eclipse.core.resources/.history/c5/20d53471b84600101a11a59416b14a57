server:
  port: 8080

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      default-filters:
        - name: JwtAuthenticationFilter

      server:
        webflux:
          routes:
            - id: demo1
              uri: http://localhost:8081
              predicates:
                - Path=/api/users/**

            - id: demo2
              uri: http://localhost:8082
              predicates:
                - Path=/api/svc/**
