server:
  port: 8080

spring:
  application:
    name: api-gateway

  cloud:
    gateway:
      routes:
        - id: demo1
          uri: http://localhost:8081
          predicates:
            - Path=/api/cvc/**
          filters:
            - name: jwt-authentication

        - id: demo2
          uri: http://localhost:8082
          predicates:
            - Path=/api/tasks/**
          filters:
            - name: jwt-authentication
