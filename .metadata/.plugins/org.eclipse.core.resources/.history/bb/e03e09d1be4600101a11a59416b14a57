  application:
    name: api-gateway

  cloud:
    gateway:
      routes:
        - id: demo1
          uri: http://localhost:8081
          predicates:
            - Path=/api/cvc/**
          filters:
            - name: JwtAuthenticationFilter  # Apply auth filter to demo1 if needed

        - id: demo2
          uri: http://localhost:8082
          predicates:
            - Path=/api/tasks/**
          filters:
            - name: JwtAuthenticationFilter  # ðŸ‘ˆ Protect this route with JWT filter
